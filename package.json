{
  "name": "switch-ts",
  "version": "1.1.1",
  "description": "Switch-case with support for complex conditions for TypeScript",
  "main": "src/index.ts",
  "scripts": {
    "check-types": "tsc --noEmit",
    "declaration": "tsc --declaration",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "lint": "npm-run-all eslint check-types",
    "lint:fix": "npm-run-all eslint:fix check-types format",
    "test": "jest",
    "test:watch": "jest --watch",
    "deps:update": "npx npm-check-updates -u && npm install",
    "deps:check": "npx npm-check-updates"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seijikohara/switch-ts.git"
  },
  "keywords": [
    "switch",
    "case",
    "when",
    "is",
    "default",
    "typescript"
  ],
  "author": "Seiji Kohara <sage.0118@gmail.com> (https://github.com/seijikohara)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seijikohara/switch-ts/issues"
  },
  "homepage": "https://github.com/seijikohara/switch-ts#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
